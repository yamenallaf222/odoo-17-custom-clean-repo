<odoo>

    <record id="all_tasks_view_tree" model="ir.ui.view">
        <field name="name">all tasks tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree decoration-danger="(is_late)">
                <field name="name"/>
                <field name="assign_to"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="active" optional="1"/>
                <field name="is_late" invisible="1"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    
    <record id="all_tasks_view_form" model="ir.ui.view">
        <field name="name">all tasks form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_new" type="object" class="btn-primary" string="Set To New"
                                invisible="status == 'new'"/>
                        <button name="action_in_progress" type="object" class="btn-secondary" string="In Progress"
                                invisible="status != 'new'"/>
                        <button name="action_completed" type="object" class="btn-success" string="Completed"
                                invisible="status != 'in_progress'"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>

                        <label for="name"/>
                        <h3>
                            <field name="name" readonly="status == 'closed' or status == 'completed'"/>
                        </h3>

                    </div>
                    <group>
                        <field name="status" invisible="1"/>
                        <field name="assign_to" readonly="status == 'closed' or status == 'completed'"/>
                        <field name="due_date" readonly="status == 'closed' or status == 'completed'"/>
                        <field name="estimated_time" string="Estimated Time(H)" readonly="status == 'closed' or status == 'completed'"/>
                        <field name="active" readonly="status == 'closed' or status == 'completed'"/>
                        <field name="is_late" invisible="1" readonly="status == 'closed' or status == 'completed'"/>                        
                    </group>

                    <group>
                        <field name="description" readonly="status == 'closed' or status == 'completed'"/>
                    </group>
                    <notebook>
                        <page string="Sub-task">
                            <field name="timesheet_line_ids" readonly="status == 'closed' or status == 'completed'">
                                <tree editable="bottom">
                                    <field name="id" editable="0"/>
                                    <field name="date" />
                                    <field name="description" />
                                    <field name="time" string="Time(H)" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="status" invisible="1"/>
                    <field name="message_follower_ids" readonly="status == 'closed' or status == 'completed'"/>
                    <field name="activity_ids" readonly="status == 'closed' or status == 'completed'"/>
                    <field name="message_ids" readonly="status == 'closed' or status == 'completed'"/>
                </div>
            </form>
        </field>
    </record>

    <record id="close_todo_task_server_action" model="ir.actions.server">
        <field name="name">Closed</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_closed()
        </field>
    </record>

    <record id="bulk_task_assignment_server_action" model="ir.actions.server">
        <field name="name">Assign bulk tasks</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_bulk_task_assignment_wizard()
        </field>
        <!-- to restrict it to tree view server actions -->
        <field name="binding_view_types">list</field>
    </record>

    <record id="todo_task_check_due_date_cron_action" model="ir.cron">
        <field name="name">Todo-Task: check due date</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">model.check_due_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <record id="all_tasks_view_search" model="ir.ui.view">
        <field name="name">all tasks search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="assign_to"/>

                <filter name="is_new" string="New status" domain="[('status', '=', 'new')]"/>
                <filter name="is_in_progress" string="In progress status" domain="[('status', '=', 'in_progress')]"/>
                <filter name="is_completed" string="Completed status" domain="[('status', '=', 'completed')]"/>

                <filter name="group_assign_to" string="Assign to" context="{'group_by': 'assign_to'}"/>
                <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                <filter name="group_due_date" string="Due date" context="{'group_by': 'due_date'}"/>
            </search>
        </field>
    </record>

    <record id="all_tasks_action" model="ir.actions.act_window">
        <field name="name">Todo Task</field>
        <field name="res_model">todo.task</field>
    </record>
    <menuitem 
        id="all_tasks_menu_item"
        name="All Tasks"
        parent="to_do_menu"
        action="all_tasks_action"
    />
</odoo>