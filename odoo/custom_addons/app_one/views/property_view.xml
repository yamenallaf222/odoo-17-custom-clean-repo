<odoo>

    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="header_custom" decoration-danger="(is_late)">
                <field name="name"/>
                <field name="postcode"/>
                <field name="is_late" invisible="1"/>
                <field name="owner_id"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="garden"/>
                <field name= "facades"/>
                <field name="state"/>
                <field name= "garden_area"/>
                <field name="bedrooms" optional="1"/>
                <field name="garage" optional="1"/>
                <field name="active"  optional="1"/>
            </tree>
        </field>
    </record>
    
    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action" type="object" class="btn-primary" string="Action"/>
                        <button name="action_draft" type="object" class="btn-primary" string="Set To Draft"
                                invisible="state == 'draft'"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="Pending"
                                invisible="state != 'draft'"/>
                        <button name="action_sold" type="object" class="btn-success" string="Sold"
                                invisible="state != 'pending'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>

                    </div>
                    <group>
                        <group string="General Info.">
                            <field name="date_availability" required="1"/>
                            <field name="expected_selling_date"/>
                            <field name="is_late" invisible="1"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                        </group>
                        
                        <group string="Additional Info.">
                            <field name="owner_id"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>
                            <field name="owner_id"/>
                            <field name= "garden_area"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garage"/>                                
                            <field name="garden_orientation"/>
                            <field name="active"/>
                            <field name="tag_ids" widget="many2many_tags"/>                                 
                        </group>
                    </group>
                    <group>
                        <field name="description" required="1"/>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>

                </div>
            </form>
        </field>
    </record>

